---
apiVersion: v1
kind: Namespace
metadata:
  name: {{ app_name }}
  labels:
    name: {{ app_name }}
---
kind: Role
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: {{ app_name }}_ns-read-access 
  namespace: {{ app_name }}
rules:
- apiGroups: ["", "extensions", "apps"]
  resources: ["*"]
  verbs: ["get", "watch", "list"]
- apiGroups: ["batch"]
  resources:
  - jobs
  - cronjobs
  verbs: ["get", "watch", "list"]
---
kind: Role
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: {{ app_name }}_ns-full-access 
  namespace: {{ app_name }}
rules:
- apiGroups: ["", "extensions", "apps"]
  resources: ["*"]
  verbs: ["*"]
- apiGroups: ["batch"]
  resources:
  - jobs
  - cronjobs
  verbs: ["*"]
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: {{ app_name }}_sa-{{ app_name }}_ns-full-access
  namespace: {{ app_name }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: {{ app_name }}_ns-full-access
subjects:
- kind: ServiceAccount
  namespace: {{ app_name }}
  name: {{ app_name }}:default
